# Django settings
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=hobby_hubby.settings.development

# Database settings (for local development)
DB_NAME=hobby_hubby
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# Database URL (for production - Render auto-populates this)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Email settings (production only)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@hobbyhubby.com

# Production settings
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com